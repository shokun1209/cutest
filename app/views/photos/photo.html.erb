<% @photos = Photo.where(content_type:"image").order('photo_date DESC') %>
<% @q = Photo.ransack(params[:q]) %>

<div class="all">
<%= render "shared/header" %>
<%= render "shared/photo_search" %>

<div class="gallery">
  <% @photos.each do |f| %>
    <div class="photo-contents">
      <%= link_to photo_path(f.id),class:"photo-link" do %>
        <%= image_tag f.image_url, class: "sized" %>
      <% end %>
      <div class="photo-date">
        <%= f.photo_date %>
      </div>
      <div class="photo-date">
        投稿者: <%= f.uploader.name%>
      </div>
    </div>
  <% end %>
</div>

</div>